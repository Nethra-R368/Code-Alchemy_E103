{
  "manifest_version": 3,
  "name": "Universal AI Website Guide",
  "version": "1.0",
  "description": "AI-powered guide for any website. Navigation, answers, and highlighting.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
